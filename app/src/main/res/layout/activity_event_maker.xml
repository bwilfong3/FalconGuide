<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#860038"
    tools:context="com.example.bmathis.Map.EventMakerActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activityScrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Share Your Event With FSU"
                android:id="@+id/textView8"
                android:textColor="@color/schoolAccent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Name:"
                    android:id="@+id/textView11"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <EditText
                    android:id="@+id/EventNameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fcfafa"
                    android:selectAllOnFocus="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Start Date:"
                    android:id="@+id/textView4"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startMonthSpinner" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startDaySpinner" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startYearSpinner" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Start Time:"
                    android:id="@+id/textView5"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/from_time_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <Spinner
                        android:id="@+id/to_time_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startTimeDay" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event End Date:"
                    android:id="@+id/textView6"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endMonthSpinner" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endDaySpinner" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endYearSpinner" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event End Time:"
                    android:id="@+id/textView7"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endHourSpinner" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endMinuteSpinner" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endTimeDay" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who Can Attend: "
                    android:id="@+id/textView9"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students"
                        android:id="@+id/studentCheckBox"
                        android:textColor="#ffffff"
                        android:buttonTint="@color/schoolAccent" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty"
                        android:id="@+id/facultyCheckBox"
                        android:textColor="#ffffff"
                        android:buttonTint="@color/schoolAccent" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Staff"
                        android:id="@+id/staffCheckBox"
                        android:textColor="#ffffff"
                        android:buttonTint="@color/schoolAccent" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alumni"
                        android:id="@+id/alumniCheckBox"
                        android:textColor="#ffffff"
                        android:buttonTint="@color/schoolAccent" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Community"
                        android:id="@+id/communityCheckBox"
                        android:textColor="#ffffff"
                        android:buttonTint="@color/schoolAccent" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Location:"
                    android:id="@+id/textView10"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventLocationSpinner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fees (Optional)"
                    android:id="@+id/textView12"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/feesTextView"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Description:"
                    android:id="@+id/textView13"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <EditText
                    android:id="@+id/EventDescET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="40dp"
                    android:lines="6"
                    android:minLines="6"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Name:"
                    android:id="@+id/textView14"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/nameEditText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Phone:"
                    android:id="@+id/textView15"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/phoneEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Email:"
                    android:id="@+id/textView16"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/emailEditText" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="194dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="bottom|center_horizontal">

                    <Button
                        android:id="@+id/okButton"
                        android:layout_width="78dp"
                        android:layout_height="38dp"
                        android:text="Create"
                        android:background="#ffffff"
                        android:textColor="#000000"/>

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="78dp"
                        android:layout_height="38dp"
                        android:text="CANCEL"
                        android:background="@color/schoolAccent"
                        android:textColor="#ffffff"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
